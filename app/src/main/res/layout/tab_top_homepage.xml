<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/id_tab_top_homepage_icon_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/restaurant"
            android:layout_marginBottom="3dp"
            />
        <TextView
            android:id="@+id/id_tab_top_homepage_tv_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="餐厅"
            android:textSize="16sp"
            android:textColor="@color/black"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/id_tab_top_homepage_icon_shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hp_shopping"
            android:layout_marginBottom="3dp"
            />
        <TextView
            android:id="@+id/id_tab_top_homepage_tv_shopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购物"
            android:textSize="16sp"
            android:textColor="@color/black"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/id_tab_top_homepage_icon_amuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:src="@drawable/amuse"/>
        <TextView
            android:id="@+id/id_tab_top_homepage_tv_amuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="娱乐"
            android:textSize="16sp"
            android:textColor="@color/black"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/id_tab_top_homepage_icon_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:src="@drawable/all"/>
        <TextView
            android:id="@+id/id_tab_top_homepage_tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所有"
            android:textSize="16sp"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>